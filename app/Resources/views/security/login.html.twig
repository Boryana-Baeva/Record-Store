{% extends '::base.html.twig' %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="container">
        <div class="row">
            <div class="col-sm-4 col-sm-offset-4">
                <div class="login-form"><!--login form-->
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <h2>Login: </h2>
                            <form action="{{ path('user_login') }}" method="post">
                                <div class="form-group">
                                    <label for="username"></label>
                                    <input type="text" class="form-control" id="username" name="_username"
                                           placeholder="Username" value="{{ last_username }}"/>
                                </div>
                                <div class="form-group">
                                    <label for="password"></label>
                                    <input type="password" class="form-control" id="password" name="_password"
                                           placeholder="Password"/>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary center-block">Login</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}