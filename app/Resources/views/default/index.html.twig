{% extends 'base.html.twig' %}

{% block body %}
    <section id="slider"><!--slider-->
        <div class="container">
            <div class="row">
                <div class="col-sm-12 col-md-12">
                    <div id="slider-carousel" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                            <li data-target="#slider-carousel" data-slide-to="0" class="active"></li>
                            <li data-target="#slider-carousel" data-slide-to="1"></li>
                            <li data-target="#slider-carousel" data-slide-to="2"></li>
                        </ol>

                        <div class="carousel-inner">
                            <div class="item active">
                                <div class="col-sm-12  col-md-12">
                                    <img class="img-responsive" src="{{ asset('images/home/record-store-slider.jpg') }}"
                                         alt=""/>
                                </div>
                            </div>
                            <div class="item">
                                <div class="col-sm-12  col-md-12">
                                    <img class="img-responsive" src="{{ asset('images/home/vinyl-records-slider.png') }}"
                                         alt=""/>
                                </div>
                            </div>
                            <div class="item">
                                <div class="col-sm-12  col-md-12">
                                    <img class="img-responsive" src="{{ asset('images/home/record-store-slider-3.jpg') }}"
                                         alt=""/>
                                </div>
                            </div>
                        </div>
                        <a href="#slider-carousel" class="left control-carousel hidden-xs" data-slide="prev">
                            <i class="fa fa-angle-left"></i>
                        </a>
                        <a href="#slider-carousel" class="right control-carousel hidden-xs" data-slide="next">
                            <i class="fa fa-angle-right"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>

    </section><!--/slider-->
    <section>
        <div class="container">
            <div class="row">
                <div class="col-sm-3">
                    <div class="left-sidebar">
                        <div class="categories_products"><!--categories_products-->
                            <h2>Categories</h2>
                            <div class="categories-name">
                                <div class="list-group">
                                    {% for category in categories %}
                                        <a class="list-group-item">{{ category.name }}
                                            <span class="badge">{{ category.products.count }}</span>
                                        </a>
                                    {% endfor %}
                                </div>
                            </div>
                        </div><!--/categories_products-->
                    </div>
                </div>

                <div class="col-sm-9 padding-right">
                    <div class="features_items"><!--features_items-->
                        <h2 class="title text-center">Features Items</h2>
                        {% for product in products %}
                            <div class="col-sm-4">
                                <div class="product-image-wrapper">
                                    <div class="single-products">
                                        <div class="productinfo text-center">
                                            <a href="{{ path('product_show', { 'id': product.id }) }}">
                                                <img src="/images/product/{{ product.image }}" alt=""/>
                                            </a>
                                            <h2>â‚¬{{ product.price }}</h2>
                                            <p>
                                                <a href="{{ path('product_show', { 'id': product.id }) }}">{{ product.artist }}
                                                    - {{ product.title }}</a></p>
                                            <a href="#" class="btn btn-default add-to-cart"><i
                                                        class="fa fa-shopping-cart"></i>Add to
                                                cart</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div><!--features_items-->

                </div>
            </div>
        </div>
    </section>


{% endblock %}

